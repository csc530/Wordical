<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".Naming"
android:background="#FF33FF99">

<!--Displays game title-->
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/app_name"
    android:textSize="80sp"
    android:layout_gravity="top"
    android:textAlignment="center"
    android:gravity="center"
    android:textStyle="bold"
    android:fontFamily="sans-serif-condensed-light"
    android:padding="5dp"
    android:textColor="@android:color/black"/>

<!--Display's which player number's name they're changing-->
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Player 1's name"
    android:textSize="50sp"
    android:layout_gravity="top"
    android:textAlignment="center"
    android:gravity="center"
    android:padding="5dp"
    android:id="@+id/title"
    android:textColor="@android:color/black"/>
<!--edittext to input the player's name-->
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/name"
    android:text=""
    android:layout_margin="15dp"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <!--The back/exit/previous button-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Exit"
        android:layout_weight="1"
        android:id="@+id/back"
        android:onClick="previous"/>
    <!--The next/play-Game button-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Next"
        android:id="@+id/next"
        android:layout_weight="1"
        android:onClick="next"/>
</LinearLayout>
<!--This button immediately starts the game with generic names for all players such as player 1,2,etc.-->
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Generic Nam'es for all players"
    android:textSize="25sp"
    android:onClick="generic"/>
</LinearLayout>